{
  "name": "chatsino-server",
  "version": "0.0.11",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "node ./esbuild",
    "build:client": "cd ../client && yarn build && cp -r ./build ../server/public && cd ../server",
    "circular-dependency-check": "npx madge -c --extensions ts,tsx ./src",
    "seed": "NODE_ENV=development SCRIPT=seed yarn build && node build/chatsino",
    "start": "NODE_ENV=development yarn build && node build/chatsino | npx pino-pretty",
    "start:test": "NODE_ENV=test yarn build && node build/chatsino | npx pino-pretty",
    "start:production": "NODE_ENV=production yarn build && node build/chatsino | npx pino-pretty",
    "test:api": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest --config=api-tests/jest.config.js",
    "test:unit": "jest --forceExit --coverage --runInBand"
  },
  "dependencies": {
    "@types/knex": "^0.16.1",
    "@types/pino": "^7.0.5",
    "@types/uuid4": "^2.0.0",
    "@types/ws": "^8.5.3",
    "axios": "^1.2.0",
    "body-parser": "^1.20.1",
    "chance": "^1.1.9",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "esbuild": "^0.15.12",
    "express": "^4.18.2",
    "ioredis": "^5.2.4",
    "jwt-redis": "^7.0.3",
    "knex": "^2.3.0",
    "node-cron": "^3.0.2",
    "pg": "^8.8.0",
    "pg-query-stream": "^4.2.4",
    "pino": "^8.7.0",
    "redis": "^4.3.1",
    "uuid4": "^2.0.3",
    "wait-port": "^1.0.4",
    "ws": "^8.10.0",
    "yup": "^0.32.11"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^5.0.10"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.19.2",
    "@types/chance": "^1.1.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.14",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.2.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.7",
    "@types/node-cron": "^3.0.6",
    "@types/pg": "^8.6.5",
    "@types/redis": "^4.0.11",
    "babel-jest": "^29.2.2",
    "jest": "^29.2.2",
    "pino-pretty": "^9.1.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
